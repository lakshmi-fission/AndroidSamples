<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <TextView
          android:id="@+id/personIdTxt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginTop="@dimen/activity_horizontal_margin"
          android:layout_marginLeft="@dimen/activity_horizontal_margin"
          />
    <TextView
        android:id="@+id/personNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/personIdTxt"
        android:textSize="20sp"
        android:layout_alignParentTop="true"

        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/personPhnoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/personNameTxt"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/personBranchTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/personPhnoTxt"/>
</RelativeLayout>